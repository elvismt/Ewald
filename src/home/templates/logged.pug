extends ../../common/templates/base.pug

block base_head
    block logged_head

block base_body
    nav(class="w3-sidenav w3-teal w3-card-2 w3-animate-left" style="display:none" id="sidenav")
        a(href="javascript:void(0)" onclick="closeNav()" class="w3-closenav w3-large w3-xxlarge") &times;
        a(href="#") Profile
        a(href="/samples/") Samples
        a(href="/logout/") Logout
    script.
        function openNav() {
            $("#main-content").css('margin-left', '300px');
            $("#sidenav").css('width', '300px');
            $("#sidenav").css('display', 'block');
            $("#openNav").css('display', 'none');
        }
        function closeNav() {
            $("#main-content").css('margin-left', '0%');
            $("#sidenav").css('display', 'none');
            $("#openNav").css('display', 'inline-block');
        }
    div(id="main-content")
        header(class="w3-container w3-teal")
            span(class="w3-opennav w3-xlarge" onclick="openNav()"
                    id="openNav" style="display:inline-block") &#9776;
                h3(style="display:inline-block") Ewald
        div(class="w3-card-8" style="display:inline-block")
            div(id="intensity")
        block logged_body
